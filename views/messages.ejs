<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/logo.svg">
    <title>Chat</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/default.css">
    <link rel="stylesheet" href="/css/messages.css">

</head>

<body>
    <div id="wrapper">
        <%- include('partials/navbar') %>
            <div class="container mt-4">
                <div class="row">
                    <span class="back-to-inbox"><a href="/gelenkutusu"><img class="left-arrow"
                                src="/img/downward-arrow.svg">Gelen
                            kutusuna geri dön</a><span>
                            <div class="col-md-6 offset-md-3">
                                <div class="card">
                                    <div class="card-header">
                                        <!--Messages with -->
                                        <a class="username" href="/profile/<%=infoUser2._id  %>">
                                            <%= infoUser2.username %>
                                        </a>
                                        <!-- and
                                <a class="username" href="/profile/<%=infoUser1._id  %>">
                                    <%= infoUser1.username %>
                                </a>
                                -->
                                    </div>
                                    <div id="chat-messages">
                                        <% if (messages.length===0) { %>
                                            <p class="text-center">No messages yet. Start the conversation!</p>
                                            <% } else { %>
                                                <% messages.forEach(function(message) { %>
                                                    <div class="message mb-2">
                                                        <div
                                                            class="d-flex <%= message.sender.equals(currentUser._id) ? 'justify-content-end' : 'justify-content-start' %>">
                                                            <div
                                                                class="message-bubble <%= message.sender.equals(currentUser._id) ? 'right-bubble' : 'left-bubble' %>">
                                                                <p class="message-content">
                                                                    <%= message.content %>
                                                                </p>
                                                                <a href="javascript:void(0);" class="daha-fazla"
                                                                    style="display:none;">Daha fazla</a>
                                                                <!-- small etiketi içinde fazla boşluk olmamalı -->
                                                                <small class="timestamp">
                                                                    <%= new Date(message.timestamp).toLocaleString() %>
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                                        <% } %>
                                    </div>
                                    <div class="card-footer">
                                        <form id="message-form" method="POST"
                                            action="/messages/<%=communicators[0]%>/<%=communicators[1] %>"
                                            autocomplete="off">
                                            <div class="input-group">
                                                <input type="text" name="message" id="message-input"
                                                    class="form-control" placeholder="Type your message..." required>
                                                <div class="input-group-append">
                                                    <button type="submit" class="btn btn-primary">Gönder</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
            <%- include('partials/footer') %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- timestamp class ına sahip etiketlein formatını değiştiriyor sadece -->
    <script src="/js/update-timestamps.js"></script>
    <script src="/js/messages.js"></script>
</body>

</html>