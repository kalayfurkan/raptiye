<footer id="page-footer">
    <!-- Sol taraf (linkler ve metinler) -->
    <div class="left-footer">
        <p class="footer-font">&copy; 2024 İlan Platformu</p>

        <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank">Click me</a>

        <a href="/hakkimizda">Hakkımızda</a>
    </div>

    <!-- Sağ taraf (form açma butonu) -->
    <button id="toggle-form" class="btn2">Bize Ulaşın</button>

    <!-- İletişim Formu -->
    <div id="contact-form">
        <button id="close-form" class="close-btn">&times;</button> <!-- Kapatma tuşu -->
        <h4>İletişim Formu</h4>
        <form action="/contact-us" method="POST">
            <label for="email">E-posta:</label>
            <input type="email" id="email" name="email" autocomplete="email" required>
        
            <label for="message">Mesajınız:</label>
            <textarea id="message" name="message" rows="4" autocomplete="off" required></textarea>
        
            <button type="submit" class="btn btn-danger btn-md">Gönder</button>
        </form>
    </div>
</footer>


<style>
    #page-footer {
        margin-top: 100px;
        display: flex;
        justify-content: space-between;
        padding: 20px;
        background-color: hsl(0, 0%, 20%);
        color: white;
        position: relative;
    }

    /* Sol Taraf İçin */
    .left-footer {
        display: flex;
        gap: 20px;
    }

    .left-footer a,
    .left-footer p {
        color: var(--nav-text-color);
        margin: 5px 0;
    }
    .left-footer p {
        cursor: default;
    }

    .left-footer a {
        color: white;
        text-decoration: none;
    }

    .left-footer a:hover {
        color: var(--secondary-color-light);
    }

    /* Sağ Taraf İçin - İletişim Formu */
    #contact-form {
        display: none;
        /* Başlangıçta gizli */
        padding: 20px;
        background-color: hsl(0, 0%, 25%);
        border-radius: 5px;
        width: 300px;
        position: absolute;
        right: 20px;
        bottom: 20px;
        z-index: 1000;
    }

    /* Kapatma Butonu */
    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: transparent;
        color: white;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    .close-btn:hover {
        color: red;
    }

    #contact-form label {
        display: block;
        margin-top: 10px;
    }

    #contact-form input,
    #contact-form textarea {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid hsl(0, 0%, 40%);
        border-radius: 3px;
    }

    #contact-form button[type="submit"] {
        margin-top: 15px;
        align-self: flex-end;
    }

    /* Buton Stili */
    #toggle-form {
        border: none;
        padding: 8px 16px;
        min-width: 120px;
    }

    @media only screen and (max-width: 530px) {

        .left-footer a, .left-footer p {
            font-size: 14px;
        }

        .left-footer {
            flex-wrap: wrap;
            gap: 10px;
        }

        #toggle-form {
            height: 40px;
            padding: 6px;
            min-width: 100px;
            font-size: 14px;
        }
    }
    @media only screen and (max-width: 460px) {
        .left-footer a, .left-footer p {
            font-size: 12px;
        }
        .left-footer {
        gap: 8px;
    }
    }

</style>

<script>
    // Formu açan buton
    document.getElementById('toggle-form').addEventListener('click', function () {
        const contactForm = document.getElementById('contact-form');
        contactForm.style.display = 'block'; // Formu göster
    });

    // Formu kapatan buton
    document.getElementById('close-form').addEventListener('click', function () {
        const contactForm = document.getElementById('contact-form');
        contactForm.style.display = 'none'; // Formu gizle
    });

</script>